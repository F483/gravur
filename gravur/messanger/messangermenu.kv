<MessangerMenu>:
    BoxLayout:
        spacing: 1
        orientation: 'vertical'

        GridLayout:
            cols: 2
            spacing: 1
            size_hint_y: None
            height: 32

            NormalButton:
                normalbutton_text: 'Public Broadcast'
                on_press: root.manager.current = 'broadcast_message'

            NormalButton:
                normalbutton_text: 'Private Message'
                on_press: root.manager.current = 'private_message'

        MessageScrollView:

        NormalButton:
            normalbutton_text: 'Retrieve from Transaction'
            size_hint_y: None
            height: 32
            on_press: root.manager.current = 'retrieve_form_tx'
