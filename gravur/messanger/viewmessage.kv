<ViewMessage>:
    ScrollView:
        BoxLayout:
            size_hint_y: None
            orientation: 'vertical'
            height: lbl_message.height + 33
            spacing: 1
            padding: 0

            BoxLayout:
                spacing: 1
                size_hint_y: None
                height: 32

                LabelBox:
                    text: root.message_type
                    size_hint_x: None
                    width: 32

                LabelBox:
                    text: root.alias

                LabelBox:
                    text: root.timestamp
                    size_hint_x: None
                    width: 160

            LabelBox:
                id: lbl_message
                size_hint_y: None
                text_size: self.width, None
                text: root.message
                height: self.texture_size[1]

