<MessagesScreen>:
    BoxLayout:
        orientation: 'vertical'

        NavBar:

        BoxLayout:
            padding: 5
            spacing: 5
            orientation: 'vertical'

            GridLayout:
                cols: 2
                spacing: 5
                size_hint_y: None
                height: 32

                NormalButton:
                    normalbutton_text: 'Public Broadcast'
                    on_press: root.manager.current = 'broadcast_message'

                NormalButton:
                    normalbutton_text: 'Private Message'
                    on_press: root.manager.current = 'private_message'

            ListView:
                item_strings: ["Dummy message text " + str(i) for i in range(100)]

            NormalButton:
                normalbutton_text: 'Retrieve from Transaction'
                size_hint_y: None
                height: 32
