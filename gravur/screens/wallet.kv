<WalletScreen>:
    BoxLayout:
        orientation: 'vertical'

        NavBar:

        BoxLayout:
            padding: 5
            spacing: 5
            orientation: 'vertical'

            LabelBox:
                text: 'Balance: 1.23BTC (~2.34USD)'

            GridLayout:
                cols: 2
                spacing: 5
                size_hint_y: None
                height: 32

                NormalButton:
                    normalbutton_text: 'Send'
                    on_press: root.manager.current = 'wallet_send'

                NormalButton:
                    normalbutton_text: 'Receive'
                    on_press: root.manager.current = 'wallet_receive'

            Accordion:
                orientation: 'vertical'

                AccordionItem:
                    title: 'Transactions'
                    collapse: False

                    ListView:
                        item_strings: ["Dummy transaction " + str(i) for i in range(100)]

                AccordionItem:
                    title: 'Invoices'

                    ListView:
                        item_strings: ["Dummy invoice " + str(i) for i in range(100)]
