<WalletMenu>:
    BoxLayout:
        spacing: 1
        orientation: 'vertical'

        LabelBox:
            text: 'Balance: 1.23BTC (~2.34USD)'

        GridLayout:
            cols: 2
            spacing: 1
            size_hint_y: None
            height: 32

            NormalButton:
                normalbutton_text: 'Send'
                on_press: root.manager.current = 'wallet_send'

            NormalButton:
                normalbutton_text: 'Receive'
                on_press: root.manager.current = 'wallet_receive'

        FadingTabbedPanel:
            tab_width: (self.size[0] / 2) - 2

            TabbedPanelItem:
                text: 'Transactions'

                TransactionScrollView:

            TabbedPanelItem:
                text: 'Invoices'

                InvoiceScrollView:
