<WalletReceive>:
    FadingTabbedPanel:
        tab_width: (self.size[0] / 2) - 2

        TabbedPanelItem:
            text: 'Send invoice'

            BoxLayout:
                spacing: 1
                orientation: 'vertical'

                SelectContact:

                AmountInput:

                TextInput:
                    multiline: True
                    hint_text: 'Invoice text.'

                LabelBox:
                    text: 'Fee: 0.0001BTC (~0.001USD)'

                StoreButton:
                    storebutton_text: 'Send invoice'

        TabbedPanelItem:
            text: 'Recieve to address'

            BoxLayout:
                spacing: 1
                orientation: 'vertical'

                AmountInput:

                AddressDisplay:
                    title: 'Recieve address'
                    address: 'migiScBNvVKYwEiCFhgBNGtZ87cdygtuSQ'

