<WalletSend>:
    BoxLayout:
        orientation: 'vertical'

        NavBar:

        Accordion:
            orientation: 'vertical'

            AccordionItem:
                title: 'Send to address'
                collapse: False

                BoxLayout:
                    spacing: 1
                    orientation: 'vertical'

                    Label:
                        text: ''

                    NormalButton:
                        normalbutton_text: 'Scan QR code'
                        size_hint_y: None
                        height: 32

                    TextInput:
                        multiline: False
                        hint_text: 'Recipient address'
                        size_hint_y: None
                        height: 32

                    AmountInput:

                    LabelBox:
                        text: 'Fee: 0.0001BTC (~0.001USD)'

                    StoreButton:
                        storebutton_text: 'Send'

                    Label:
                        text: ''

            AccordionItem:
                title: 'Send to contact'

                BoxLayout:
                    spacing: 1
                    orientation: 'vertical'

                    SelectContact:

                    AmountInput:

                    TextInput:
                        multiline: True
                        hint_text: 'Optional private message to recipient.'

                    LabelBox:
                        text: 'Fee: 0.0001BTC (~0.001USD)'

                    StoreButton:
                        storebutton_text: 'Send'
