<WalletSend>:
    FadingTabbedPanel:
        tab_width: (self.size[0] / 2) - 2

        TabbedPanelItem:
            text: 'Send to contact'

            BoxLayout:
                spacing: 1
                orientation: 'vertical'

                SelectContact:

                AmountInput:

                TextInput:
                    multiline: True
                    hint_text: 'Optional private message to recipient.'

                LabelBox:
                    text: 'Fee: 0.0001BTC (~0.001USD)'

                StoreButton:
                    storebutton_text: 'Send'

        TabbedPanelItem:
            text: 'Send to address'

            BoxLayout:
                orientation: 'vertical'
                spacing: 1

                NormalButton:
                    normalbutton_text: 'Scan QR code'
                    size_hint_y: None
                    height: 32

                TextInput:
                    multiline: False
                    hint_text: 'Recipient address'
                    size_hint_y: None
                    height: 32

                AmountInput:

                LabelBox:
                    text: 'Fee: 0.0001BTC (~0.001USD)'

                StoreButton:
                    storebutton_text: 'Send'

                EigengrauBox:

